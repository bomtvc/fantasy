# Environment Configuration Template
# Copy this to .env and fill in your values

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Caching Configuration
CACHE_TYPE=simple  # Options: simple, redis
CACHE_DEFAULT_TIMEOUT=300
# CACHE_REDIS_URL=redis://localhost:6379/0  # Uncomment if using Redis

# FPL API Configuration (from config.py)
REQUEST_TIMEOUT=10
MAX_RETRIES=3
REQUEST_DELAY=0.5
MAX_WORKERS=5

# Default Values
DEFAULT_LEAGUE_ID=314
DEFAULT_PHASE=1
DEFAULT_MONTH_MAPPING=1-4,5-8,9-12,13-16,17-20,21-24,25-28,29-32,33-36,37-38
